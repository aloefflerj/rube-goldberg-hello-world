---
import CharacterBox from "./CharacterSpeaking.astro";
import ElementsBox from "./CharacterExplanations.astro";
import SpeechBox from "./CharacterSpeech.astro";
import type Step from "../../types/Step";

interface Props {
    steps: Step[];
}

const { steps } = Astro.props;
const currentStep = steps.find((step) => step.status === "ongoing");
---

<div class="box-body">
    <SpeechBox currentStep={currentStep ?? null} />
    <ElementsBox />
    <CharacterBox />
</div>

<style>
    div.box-body {
        width: 100%;
        height: 90%;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, 1fr);
        grid-column-gap: 0px;
        grid-row-gap: 0px;
    }
</style>
