---
import CharacterBox from "./CharacterSpeaking.astro";
import ElementsBox from "./CharacterExplanations.astro";
import SpeechBox from "./CharacterSpeech.astro";
---

<div class="box-body">
    <SpeechBox />
    <ElementsBox />
    <CharacterBox />
</div>

<style>
    div.box-body {
        width: 100%;
        height: 90%;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, 1fr);
        grid-column-gap: 0px;
        grid-row-gap: 0px;
    }
</style>
